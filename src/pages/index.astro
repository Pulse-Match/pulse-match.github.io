---
import Layout from "../layouts/Layout.astro";
import WaitlistForm from "../components/WaitlistForm";
---

<Layout title="Glid — Stop Planning, Just Play">
    <!-- Navigation -->
    <nav>
        <div class="nav-inner">
            <a href="/" class="logo">
                <img
                    src="/glid-logo-white.png"
                    alt="Glid"
                    class="logo-svg logo-dark"
                />
                <img
                    src="/glid-logo-black.png"
                    alt="Glid"
                    class="logo-svg logo-light"
                />
            </a>
            <div class="nav-links">
                <a href="#how-it-works" class="nav-link">How It Works</a>
                <a href="#engine" class="nav-link">Matching</a>
                <a href="#features" class="nav-link">Features</a>
                <a href="#waitlist" class="nav-link">Waitlist</a>
            </div>
            <div class="nav-actions">
                <button
                    class="theme-toggle"
                    id="themeToggle"
                    aria-label="Toggle theme"
                >
                    <span class="theme-icon-dark">&#9790;</span>
                    <span class="theme-icon-light">&#9728;</span>
                </button>
                <a href="#waitlist" class="btn-primary">Join Beta</a>
            </div>
        </div>
    </nav>

    <main>
        <!-- Hero Section -->
        <section class="hero">
            <div class="hero-glow hero-glow-1" aria-hidden="true"></div>
            <div class="hero-glow hero-glow-2" aria-hidden="true"></div>

            <div class="hero-badge reveal delay-1">
                <span class="hero-badge-dot"></span>
                Launching 2026
            </div>

            <h1 class="display-hero reveal delay-2">
                Stop Planning,<br />
                Just <span class="text-gradient">Play.</span>
            </h1>

            <p class="hero-subtitle reveal delay-3">
                Find live sessions near you. Swipe to join. Show up and play. No
                more texting 10 friends to find one opponent.
            </p>

            <div class="hero-cta-group reveal delay-4">
                <a href="#waitlist" class="btn-primary">
                    Get Early Access
                    <span>&rarr;</span>
                </a>
                <a href="#how-it-works" class="btn-ghost">See How It Works</a>
            </div>

            <div class="scroll-indicator">
                <span>Scroll</span>
                <div class="scroll-line"></div>
            </div>
        </section>

        <!-- How It Works Section -->
        <div class="section-divider"></div>
        <section class="section section-tight" id="how-it-works">
            <div style="text-align: center; margin-bottom: 64px;">
                <p class="overline reveal">How It Works</p>
                <h2
                    class="display-large reveal delay-1"
                    style="margin-top: 16px;"
                >
                    Three steps to game time.
                </h2>
            </div>

            <div class="steps-grid">
                <div class="step-card reveal delay-1">
                    <div class="step-number">01</div>
                    <div class="step-icon">&#128269;</div>
                    <div class="step-title">Find a session</div>
                    <div class="step-desc">
                        Browse live sessions on the map or create your own. Pick
                        your sport, set the time and place.
                    </div>
                </div>

                <div class="step-card reveal delay-2">
                    <div class="step-number">02</div>
                    <div class="step-icon">&#9757;</div>
                    <div class="step-title">Swipe to join</div>
                    <div class="step-desc">
                        Swipe right on a session you like. The host reviews your
                        profile and accepts — you're in.
                    </div>
                </div>

                <div class="step-card reveal delay-3">
                    <div class="step-number">03</div>
                    <div class="step-icon">&#127939;</div>
                    <div class="step-title">Show up and play</div>
                    <div class="step-desc">
                        Chat with your match, coordinate details, and meet at
                        the venue. Game on.
                    </div>
                </div>
            </div>
        </section>

        <!-- Concept Section -->
        <div class="section-divider"></div>
        <section class="section">
            <div class="concept-grid">
                <div>
                    <p class="overline reveal">A new way to play</p>
                    <h2
                        class="display-large reveal delay-1"
                        style="margin-top: 16px;"
                    >
                        Sessions, not<br />profiles.
                    </h2>
                    <p
                        class="body-large reveal delay-2"
                        style="margin-top: 20px; max-width: 480px; color: var(--text-secondary);"
                    >
                        Other apps match you with people. Glid matches you with
                        <strong style="color: var(--text-primary);"
                            >games worth playing</strong
                        >. Every card is a real session — scored by skill and
                        reliability, not just proximity. When the clock hits
                        zero, the card disappears. No ghosting. Just playing.
                    </p>
                </div>

                <div class="reveal-scale delay-3">
                    <div class="card-comparison">
                        <!-- Old way -->
                        <div class="comparison-card faded">
                            <div
                                style="height: 140px; background: var(--surface); display: flex; align-items: center; justify-content: center;"
                            >
                                <div
                                    style="width: 60px; height: 60px; border-radius: 50%; background: var(--surface-secondary); display: flex; align-items: center; justify-content: center; font-size: 24px;"
                                >
                                    &#128100;
                                </div>
                            </div>
                            <div style="padding: 14px;">
                                <div
                                    style="font-size: 12px; font-weight: 700; color: var(--text-primary); font-family: var(--font-body);"
                                >
                                    John, 28
                                </div>
                                <div
                                    style="font-size: 10px; color: var(--text-tertiary); margin-top: 4px;"
                                >
                                    Likes tennis, maybe
                                </div>
                            </div>
                            <div class="comparison-label">Profile-first</div>
                        </div>

                        <!-- Arrow -->
                        <div
                            style="font-size: 1.5rem; color: var(--text-tertiary);"
                        >
                            &rarr;
                        </div>

                        <!-- New way -->
                        <div class="comparison-card active">
                            <div
                                style="height: 140px; background: linear-gradient(135deg, #047857, #059669); display: flex; align-items: center; justify-content: center; position: relative;"
                            >
                                <span
                                    style="position: absolute; top: 10px; left: 10px; background: rgba(28, 25, 23, 0.85); backdrop-filter: blur(6px); padding: 3px 8px; border-radius: 99px; font-size: 7px; font-weight: 700; color: #fff; text-transform: uppercase; letter-spacing: 0.05em;"
                                    >Competitive</span
                                >
                                <span style="font-size: 40px;">&#127934;</span>
                            </div>
                            <div style="padding: 14px;">
                                <div
                                    style="font-size: 12px; font-weight: 700; color: var(--text-primary); font-family: var(--font-body);"
                                >
                                    Tennis @ Ashburn
                                </div>
                                <div
                                    style="font-size: 10px; color: var(--field); margin-top: 4px; font-weight: 600;"
                                >
                                    Today, 7 PM &middot; 3 spots
                                </div>
                                <div
                                    style="display: flex; gap: 8px; margin-top: 6px;"
                                >
                                    <span
                                        style="font-size: 8px; color: var(--field); font-weight: 700;"
                                        >Match 90%</span
                                    >
                                    <span
                                        style="font-size: 8px; color: var(--clay); font-weight: 700;"
                                        >Vibes 70%</span
                                    >
                                </div>
                            </div>
                            <div class="comparison-label">Session-first</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- The Engine Section -->
        <div class="section-divider"></div>
        <section class="section" id="engine">
            <div style="text-align: center; margin-bottom: 64px;">
                <p class="overline reveal">Smart Matching</p>
                <h2
                    class="display-large reveal delay-1"
                    style="margin-top: 16px;"
                >
                    Two ratings.<br />Zero guesswork.
                </h2>
                <p
                    class="subhead reveal delay-2"
                    style="margin-top: 16px; max-width: 560px; margin-left: auto; margin-right: auto;"
                >
                    Every player gets two scores — one for skill, one for
                    reliability. So you always know what you're getting into.
                </p>
            </div>

            <div class="engine-grid">
                <div class="engine-card reveal delay-1">
                    <div class="engine-badge engine-badge-match">Match</div>
                    <h3 class="engine-card-title">Your Skill Level</h3>
                    <p class="engine-card-desc">
                        We track how you play — your wins, consistency, and
                        competitive edge. The more you play, the smarter your
                        matches get.
                    </p>
                    <div class="engine-traits">
                        <span>Skill Level</span>
                        <span>Win Rate</span>
                        <span>Consistency</span>
                    </div>
                </div>

                <div class="engine-card reveal delay-2">
                    <div class="engine-badge engine-badge-vibes">Vibes</div>
                    <h3 class="engine-card-title">Your Reliability</h3>
                    <p class="engine-card-desc">
                        We track how you show up — punctuality, sportsmanship,
                        and energy. Good reviews from reliable players count
                        even more.
                    </p>
                    <div class="engine-traits">
                        <span>Punctuality</span>
                        <span>Sportsmanship</span>
                        <span>Energy</span>
                    </div>
                </div>
            </div>

            <div class="engine-premium reveal delay-3">
                <div class="engine-premium-badge">
                    Coming Soon &middot; Premium
                </div>
                <p class="engine-premium-text">
                    Smart suggestions that learn your schedule and preferences.
                    The app gets better the more you use it.
                </p>
            </div>
        </section>

        <!-- Features Section -->
        <div class="section-divider"></div>
        <section class="section section-tight" id="features">
            <div style="text-align: center; margin-bottom: 36px;">
                <p class="overline reveal">Features</p>
                <h2
                    class="display-large reveal delay-1"
                    style="margin-top: 16px;"
                >
                    Built for everyday athletes.
                </h2>
                <p class="subhead reveal delay-2" style="margin-top: 16px;">
                    Get back to the sport you love. We handle the logistics.
                </p>
            </div>

            <div class="bento-grid">
                <div class="bento-card reveal delay-1">
                    <div class="bento-card-label">Discover</div>
                    <div class="bento-card-title">Find Your Game</div>
                    <div class="bento-card-desc">
                        Personalized sessions based on your sport, skill level,
                        and goals. Competitive games, casual pickup, coaching —
                        whatever gets you moving.
                    </div>
                </div>

                <div class="bento-card reveal delay-2">
                    <div class="bento-card-label">Compatibility</div>
                    <div class="bento-card-title">Match & Vibes</div>
                    <div class="bento-card-desc">
                        Every session shows your compatibility. Match measures
                        skill. Vibes measures reliability. Both update after
                        every game.
                    </div>
                </div>

                <div class="bento-card reveal delay-3">
                    <div class="bento-card-label">Sessions</div>
                    <div class="bento-card-title">Auto-expire</div>
                    <div class="bento-card-desc">
                        Sessions disappear when the game starts. No stale
                        listings. Always live.
                    </div>
                </div>

                <div class="bento-card reveal delay-4">
                    <div class="bento-card-label">Explore</div>
                    <div class="bento-card-title">Live map</div>
                    <div class="bento-card-desc">
                        Real-time map of every session near you. Red clusters
                        for hot spots, green pins for individual games. Tap to
                        see details and join.
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <div class="section-divider"></div>
        <section class="cta-section" id="waitlist">
            <div class="cta-container">
                <p class="overline reveal">Join the Waitlist</p>
                <h2
                    class="display-large reveal delay-1"
                    style="margin-top: 16px;"
                >
                    Be first on the field.
                </h2>
                <p class="subhead reveal delay-2" style="margin-top: 16px;">
                    Get early access when Glid launches in your city. Turn a
                    lonely Saturday into a match day.
                </p>

                <div class="reveal delay-3">
                    <WaitlistForm client:load />
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="site-footer">
        <div class="footer-inner">
            <a href="/" class="logo">
                <img
                    src="/glid-logo-white.png"
                    alt="Glid"
                    class="logo-svg logo-dark"
                />
                <img
                    src="/glid-logo-black.png"
                    alt="Glid"
                    class="logo-svg logo-light"
                />
            </a>
            <div class="footer-links">
                <a href="#how-it-works" class="footer-link">How It Works</a>
                <a href="#engine" class="footer-link">Matching</a>
                <a href="#features" class="footer-link">Features</a>
                <a href="/privacy" class="footer-link">Privacy</a>
            </div>
            <div class="footer-copy">
                &copy; 2026 Glid. All rights reserved.
            </div>
        </div>
    </footer>

    <script is:inline>
        // Theme toggle
        document.getElementById("themeToggle").addEventListener("click", () => {
            window.toggleTheme();
        });

        // Scroll reveal observer
        const revealObserver = new IntersectionObserver(
            (entries) => {
                entries.forEach((entry) => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add("visible");
                        revealObserver.unobserve(entry.target);
                    }
                });
            },
            {
                root: null,
                rootMargin: "0px 0px -60px 0px",
                threshold: 0.1,
            },
        );

        document.querySelectorAll(".reveal, .reveal-scale").forEach((el) => {
            revealObserver.observe(el);
        });

        // Smooth scroll
        document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
            anchor.addEventListener("click", function (e) {
                e.preventDefault();
                const target = document.querySelector(
                    this.getAttribute("href"),
                );
                if (target) {
                    target.scrollIntoView({
                        behavior: "smooth",
                        block: "start",
                    });
                }
            });
        });
    </script>
</Layout>
