            // Select the *last* child because that's the one on top in DOM order usually?
            // Wait, looking at initCards above: c1 is appended last. So it is on top.
            // The selector in original code: .swipe-card:not(.next-card):not(.hidden-card)
            const currentCard = cardStack.querySelector('.swipe-card:not(.next-card):not(.hidden-card)');
            const nextCard = cardStack.querySelector('.swipe-card.next-card');
            const hiddenCard = cardStack.querySelector('.swipe-card.hidden-card');
            const likeBtn = document.getElementById('likeBtn');
            const passBtn = document.getElementById('passBtn');
            const matchPopup = document.getElementById('matchPopup');

            if (!currentCard) {
                isAnimating = false;
                return;
            }

            // Animate button
            if (direction === 'right') {
                likeBtn.classList.add('active-like');
                setTimeout(() => likeBtn.classList.remove('active-like'), 300);
            } else {
                passBtn.classList.add('active-pass');
                setTimeout(() => passBtn.classList.remove('active-pass'), 300);
            }

            // Swipe current card
            currentCard.classList.add(direction === 'right' ? 'swiping-right' : 'swiping-left');

            // Show match popup on like (randomly, ~40% chance)
            const showMatch = direction === 'right' && Math.random() > 0.6;

            setTimeout(() => {
                if (showMatch) {
                    matchPopup.classList.add('show');
                    setTimeout(() => {
                        matchPopup.classList.remove('show');
                        finishSwipe();
                    }, 1500);
                } else {
                    finishSwipe();
                }
            }, 400);

            function finishSwipe() {
                // Remove swiped card
                currentCard.remove();

                // Promote next card
                if (nextCard) {
                    nextCard.classList.remove('next-card');
                }

                // Promote hidden card
                if (hiddenCard) {
                    hiddenCard.classList.remove('hidden-card');
                    hiddenCard.classList.add('next-card');
                }

                // Add new hidden card
                currentIndex = (currentIndex + 1) % cards.length;
                const newCardIndex = (currentIndex + 2) % cards.length;
                const newCard = document.createElement('div');
                newCard.className = 'swipe-card hidden-card';
                newCard.dataset.card = newCardIndex;
                newCard.innerHTML = createCardHTML(cards[newCardIndex]);
                // Insert at the beginning (bottom of stack)
                cardStack.insertBefore(newCard, cardStack.firstChild);

                isAnimating = false;
            }
        }

        // Scroll-based swiping
        function handleScroll() {
            const scrollY = window.scrollY;
            const delta = scrollY - lastScrollY;
            lastScrollY = scrollY;

            // Only trigger when scrolling down and in the hero section
            if (scrollY < window.innerHeight * 1.5) {
                accumulatedScroll += Math.abs(delta);

                if (accumulatedScroll >= scrollThreshold && !isAnimating) {
                    accumulatedScroll = 0;
                    // Alternate between right and left swipes, with more right swipes
                    const direction = Math.random() > 0.3 ? 'right' : 'left';
                    swipeCard(direction);
                }
            }
        }

        // Init
        document.addEventListener('DOMContentLoaded', () => {
            initCards();
            
            // Click handlers
            document.getElementById('likeBtn')?.addEventListener('click', () => swipeCard('right'));
            document.getElementById('passBtn')?.addEventListener('click', () => swipeCard('left'));
            
            // Scroll handler
            let ticking = false;
            window.addEventListener('scroll', () => {
                if (!ticking) {
                    window.requestAnimationFrame(() => {
                        handleScroll();
                        ticking = false;
                    });
                    ticking = true;
                }
            });

            // Auto-swipe demo
            setTimeout(() => {
                if (window.scrollY < 100) {
                    swipeCard('right');
                }
            }, 3000);
        });
    </script>
